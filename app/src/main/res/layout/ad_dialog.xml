<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ad_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#FF0000">

    <ImageView
        android:id="@+id/ad_imageView"
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:src="@drawable/ic_trash_action" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        android:id="@+id/closeImageView"
        android:layout_toRightOf="@id/ad_imageView"
        android:layout_toEndOf="@id/ad_imageView"
        android:layout_height="wrap_content" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/textView"
        android:layout_alignRight="@+id/closeImageView"
        android:layout_alignEnd="@+id/closeImageView" />
</RelativeLayout>
